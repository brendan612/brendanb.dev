---
interface Props {
	title: string;
	subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header class="section-header">
	<h2 class="section-title">{title}</h2>
	{subtitle && <p class="muted subtitle">{subtitle}</p>}
</header>

<style>
	.section-header {
		margin-bottom: var(--space-4);
	}

	.subtitle {
		max-width: 50ch;
		line-height: 1.55;
	}
</style>
