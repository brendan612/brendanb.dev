---
import { site } from '../../consts/site';
---

<section class="hero container">
	<div class="hero-grid">
		<!-- Left: Editorial typography -->
		<div class="hero-text">
			<div class="signal animate-fade-up animate-delay-1">
				<span class="signal-dot" aria-hidden="true"></span>
				<span class="mono">{site.location}</span>
			</div>

			<h1 class="name">
				<span class="name-line animate-fade-up animate-delay-2">Brendan</span>
				<span class="name-line accent animate-fade-up animate-delay-3">Bishop</span>
			</h1>

			<p class="tagline animate-fade-up animate-delay-4">{site.tagline}</p>

			<div class="actions animate-fade-up animate-delay-5">
				<a class="btn primary" href="/projects">
					View Projects
					<span class="btn-arrow" aria-hidden="true">&#8599;</span>
				</a>
				<a class="btn ghost" href="/about">About Me</a>
			</div>
		</div>

		<!-- Right: Terminal card -->
		<div class="hero-terminal terminal animate-fade-up animate-delay-4">
			<div class="terminal-bar">
				<span class="terminal-dot"></span>
				<span class="terminal-dot"></span>
				<span class="terminal-dot"></span>
				<span class="terminal-filename">status.sh</span>
			</div>
			<div class="terminal-body">
				<p><span class="prompt">$</span> whoami</p>
				<p class="output">{site.name}</p>
				<p><span class="prompt">$</span> role</p>
				<p class="output">{site.role}</p>
				<p><span class="prompt">$</span> employer</p>
				<p class="output">{site.employer}</p>
				<p><span class="prompt">$</span> focus</p>
				<p class="output">modern web experiences</p>
				<p class="cursor-line"><span class="prompt">$</span> <span class="cursor">&#9608;</span></p>
			</div>
		</div>
	</div>

	<!-- Decorative elements -->
	<div class="deco-line" aria-hidden="true"></div>
</section>

<style>
	.hero {
		position: relative;
		padding: var(--space-16) 0 var(--space-12);
		min-height: min(85vh, 52rem);
		display: flex;
		align-items: center;
	}

	.hero-grid {
		display: grid;
		grid-template-columns: 1.1fr 0.9fr;
		gap: var(--space-8);
		align-items: center;
		width: 100%;
	}

	/* ── Signal badge ── */
	.signal {
		display: inline-flex;
		gap: 0.45rem;
		align-items: center;
		padding: 0.25rem 0.75rem;
		border: 1px solid var(--line);
		border-radius: 999px;
		font-size: 0.78rem;
		color: var(--muted);
		background: color-mix(in oklab, var(--surface) 50%, transparent);
	}

	.signal-dot {
		width: 0.4rem;
		height: 0.4rem;
		border-radius: 50%;
		background: var(--accent);
		box-shadow: 0 0 6px rgba(221, 122, 45, 0.5);
	}

	/* ── Name ── */
	.name {
		margin: var(--space-4) 0 var(--space-3);
		line-height: 0.88;
	}

	.name-line {
		display: block;
		font-family: var(--font-display);
		font-size: clamp(3rem, 2.2rem + 4.5vw, 6.5rem);
		font-weight: 700;
		font-style: italic;
		letter-spacing: -0.03em;
	}

	.name-line.accent {
		color: var(--accent);
		-webkit-text-stroke: 0;
	}

	/* ── Tagline ── */
	.tagline {
		font-size: clamp(1rem, 0.9rem + 0.5vw, 1.25rem);
		font-weight: 400;
		max-width: 42ch;
		color: var(--muted);
		line-height: 1.5;
	}

	/* ── Actions ── */
	.actions {
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
		margin-top: var(--space-6);
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.35rem;
		padding: 0.65rem 1.2rem;
		border-radius: var(--radius-sm);
		font-family: var(--font-mono);
		font-size: 0.84rem;
		font-weight: 500;
		letter-spacing: -0.01em;
		transition: transform var(--transition-fast), background-color var(--transition-base), box-shadow var(--transition-base);
	}

	.btn:hover,
	.btn:focus-visible {
		transform: translateY(-2px);
	}

	.primary {
		background: var(--accent);
		color: #fff;
		box-shadow: 0 4px 16px rgba(221, 122, 45, 0.25);
	}

	.primary:hover,
	.primary:focus-visible {
		background: var(--accent-strong);
		box-shadow: 0 6px 24px rgba(221, 122, 45, 0.35);
	}

	.btn-arrow {
		font-size: 1.1em;
		transition: transform var(--transition-fast);
	}

	.primary:hover .btn-arrow {
		transform: translate(1px, -1px);
	}

	.ghost {
		border: 1px solid var(--line);
		color: var(--ink);
		background: color-mix(in oklab, var(--surface) 50%, transparent);
	}

	.ghost:hover,
	.ghost:focus-visible {
		border-color: color-mix(in oklab, var(--accent) 40%, var(--line));
		background: color-mix(in oklab, var(--surface) 70%, transparent);
	}

	/* ── Terminal ── */
	.hero-terminal {
		justify-self: end;
		width: 100%;
		max-width: 26rem;
	}

	/* ── Decorative line ── */
	.deco-line {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(
			90deg,
			transparent,
			var(--line) 20%,
			var(--accent) 50%,
			var(--line) 80%,
			transparent
		);
		opacity: 0.5;
	}

	/* ── Mobile ── */
	@media (max-width: 900px) {
		.hero {
			min-height: auto;
			padding: var(--space-12) 0 var(--space-8);
		}

		.hero-grid {
			grid-template-columns: 1fr;
			gap: var(--space-6);
		}

		.hero-terminal {
			justify-self: start;
			max-width: 100%;
		}

		.name-line {
			font-size: clamp(2.6rem, 2rem + 4vw, 5rem);
		}
	}
</style>
